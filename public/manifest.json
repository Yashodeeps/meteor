{
  "manifest_version": 3,
  "name": "Meteor",
  "version": "1.0",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "32": "meteor-fav.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "chrome_url_overrides": {
    "newtab": "../index.html"
  },
  "permissions": ["storage", "activeTab", "scripting", "tabs"],
  "host_permissions": ["<all_urls>"],
  "icons": {
    "32": "favicon32.png"
  }
}
